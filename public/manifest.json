      "name": "Nueva Reserva",
      "short_name": "Reservar",
      "description": "Crear una nueva reserva rápidamente",
      "url": "/bookings/new",
      "icons": [
        {
          "src": "/shortcut-booking.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Mis Reservas",
      "short_name": "Reservas",
